{
  "env": {
    "jest/globals": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],

  "plugins": ["prettier", "jest"],

  "rules": {
    "prettier/prettier": "error",
    "func-names": ["error", "never"],
    "no-console": "off",
    "no-underscore-dangle": "off"
  },

  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.common.js"
      }
    }
  }
}
